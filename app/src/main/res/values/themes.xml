<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NewsApplication" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="noActionBar" parent="Theme.NewsApplication">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.NewsApplication.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.NewsApplication.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="LeftCardView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">22dp</item>
        <item name="cornerSizeTopLeft">22dp</item>
        <item name="cornerSizeBottomLeft">22dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="RightCardView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">22dp</item>
        <item name="cornerSizeTopLeft">22dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">22dp</item>
    </style>
    <style name="LeftCardViewBackground" parent="@style/Widget.MaterialComponents.CardView">  // must be add to apply corners
        <item name="shapeAppearanceOverlay">@style/LeftCardView</item>
    </style>

    <style name="RightCardViewBackground" parent="@style/Widget.MaterialComponents.CardView">  // must be add to apply corners
        <item name="shapeAppearanceOverlay">@style/RightCardView</item>
    </style>

    <style name="textview" >
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="setting_selection_box" >
        <item name="android:gravity">start|center</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@color/white</item>
        <item name="strokeColor">@color/green</item>
        <item name="android:strokeColor">@color/green</item>
        <item name="android:drawableEnd">@drawable/ic_arrow_drop_down</item>
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="search_space">
<!--        <item name="android:background">@drawable/search_corner</item>-->
        <item name="android:gravity">center</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/green</item>

    </style>

</resources>